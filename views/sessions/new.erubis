<h1>Login</h1>

<form method="POST" action="/sessions">
  <%== 'Email or Password invalid. Please try again.<br/><br/>' if @not_successful %>
  Email: <input name="email" type="text" value="<%= params[:email] %>"/>
  <br/>
  Password: <input name="password" type="password"/>
  <br/>
  <input type="submit" value="Login"/>
</form>